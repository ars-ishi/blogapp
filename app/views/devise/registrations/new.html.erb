<h2 class="article_title">会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :nickname %> <em><span style="color:#9e9e9e;">(6文字以内)</span></em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "6", placeholder: "例) tama" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "例) sample@gmail.com" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <em><span style="color:#9e9e9e;">(<%= @minimum_password_length %> 文字以上)</span></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "半角英数字のみ" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度パスワードを入力" %>
    </div>

    <div class="actions row">
      <%= button_tag type: "submit", class: "btn waves-effect btn-large wideButton" do %>登録する<% end %>
    </div>

  <% end %>
